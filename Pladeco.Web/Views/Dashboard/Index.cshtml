@model IEnumerable<Pladeco.Domain.Project>

@{
    ViewData["Title"] = "Dashboard";
}




<div class="page-header">
    <br />
    <div class="breadcrumb-line breadcrumb-line-component">
        <ul class="breadcrumb">
            <li class="active">Dashboard</li>
        </ul>
    </div>
</div>
<br />
<!-- /page header -->
<!-- Content area -->
<div class="content">
    <!-- Vertical form options -->
    <div class="row">

        <div class="col-md-12">
            @foreach (var item in Model)
            {
                <div class="col-sm-6 col-md-3">
                    <div class="panel panel-body">
                        <div class="media no-margin-top content-group">
                            <div class="media-left media-middle">
                                <i class="icon-folder icon-2x text-success-400 opacity-75"></i>
                            </div>

                            <div class="media-body">
                                <a asp-controller="Projects" asp-action="Details" asp-route-id="@item.ID"><h6 class="no-margin text-semibold">@item.Name</h6></a>
                                <span class="text-muted">Responsable: @item.Responsable.Name</span>
                            </div>
                        </div>

                        <div class="progress progress-micro mb-10">
                            <div class="progress-bar bg-success-400" style="width: @item.Porc%">
                                <span class="sr-only">@item.Porc% Completado</span>
                            </div>
                        </div>
                        <span class="pull-right">@item.Porc%</span>
                        Tareas (@item.DoneTasks/@item.TotalTasks)
                    </div>
                </div>
            }

        </div>
    </div>
</div>


