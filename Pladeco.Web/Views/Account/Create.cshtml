@model Pladeco.Web.Models.CreateUserViewModel

@{
    ViewData["Title"] = "Create";
}


<form asp-action="Create">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <!-- Page header -->
    <div class="page-header">
        <br />
        <div class="breadcrumb-line breadcrumb-line-component">
            <ul class="breadcrumb">
                <li><a href="#"><i class="icon-cog3"></i> Administracion</a></li>
                <li><a asp-action="Index">Usuarios</a></li>
                <li class="active">Nuevo</li>
            </ul>
        </div>
        <br />
        <div class="page-header-content">
            <div class="text-left">
                <button type="submit" class="btn bg-green-700">Guardar<i class="icon-arrow-right14 position-right"></i></button>
                <a asp-action="Index" class="btn btn-default" role="button">Descartar</a>
            </div>
        </div>
    </div>
    <!-- /page header -->
    <!-- Content area -->
    <div class="content">
        <!-- Vertical form options -->
        <div class="row">
            <div class="col-md-12">
                <!-- Basic layout-->
                <p>
                    <div class="text-left">
                    </div>
                </p>
                <div class="panel panel-flat">
                    <div class="panel-body">
                        <div class="form-group">
                            <label asp-for="Name" class="text-semibold"></label>
                            <input asp-for="Name" class="form-control" autofocus />
                            <span asp-validation-for="Name" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="Username" class="text-semibold"></label>
                            <input asp-for="Username" class="form-control" />
                            <span asp-validation-for="Username" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="AreaID" class="text-semibold"></label>
                            <select asp-for="AreaID" class="select" asp-items="Model.Areas"></select>
                            <span asp-validation-for="AreaID" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="RoleID" class="text-semibold"></label>
                            <select asp-for="RoleID" class="select" asp-items="Model.Roles"></select>
                            <span asp-validation-for="RoleID" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="Password" class="text-semibold"></label>
                            <input asp-for="Password" class="form-control" />
                            <span asp-validation-for="Password" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="Confirm" class="text-semibold"></label>
                            <input asp-for="Confirm" class="form-control" />
                            <span asp-validation-for="Confirm" class="text-danger"></span>
                        </div>
                    </div>
                </div>
                <!-- /basic layout -->
            </div>
        </div>
    </div>
    <!-- /content area -->
</form>
<!-- /vertical form options -->
<!-- Theme JS files -->
<script src="~/js/plugins/forms/selects/select2.min.js"></script>
<script src="~/js/plugins/forms/styling/uniform.min.js"></script>
<script src="~/js/custom/custom_select2.js"></script>
<script src="~/js/custom/custom_select2.js"></script>
<script src="~/js/custom/custom_checkradio.js"></script>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
