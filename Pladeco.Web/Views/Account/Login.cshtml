@model LoginViewModel

@{
    Layout = null;
}

@{
    ViewData["Title"] = "Pladeco - Iniciar sesión";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>@ViewData["Title"]</title>

    <!-- Global stylesheets -->
    <link href="https://fonts.googleapis.com/css?family=Roboto:400,300,100,500,700,900" rel="stylesheet" type="text/css">
    <link href="~/css/icons/icomoon/styles.css" rel="stylesheet" type="text/css">
    <link href="~/css/bootstrap.min.css" rel="stylesheet" type="text/css">
    <link href="~/css/core.min.css" rel="stylesheet" type="text/css">
    <link href="~/css/components.min.css" rel="stylesheet" type="text/css">
    <link href="~/css/colors.min.css" rel="stylesheet" type="text/css">
    <!-- /global stylesheets -->
    <!-- Core JS files -->
    <script src="~/js/plugins/loaders/pace.min.js"></script>
    <script src="~/js/core/libraries/jquery.min.js"></script>
    <script src="~/js/core/libraries/bootstrap.min.js"></script>
    <script src="~/js/plugins/loaders/blockui.min.js"></script>
    <!-- /core JS files -->
    <!-- Theme JS files -->
    <script src="~/js/plugins/forms/validation/validate.min.js"></script>
    <script src="~/js/plugins/forms/styling/uniform.min.js"></script>

    <script src="~/js/app.js"></script>
    <script src="~/js/demo_pages/login_validation.js"></script>

    <script src="~/js/plugins/ui/ripple.min.js"></script>
    <!-- /theme JS files -->

</head>

<body class="login-container login-cover">

    <!-- Page container -->
    <div class="page-container">

        <!-- Page content -->
        <div class="page-content">

            <!-- Main content -->
            <div class="content-wrapper">

                <!-- Content area -->
                <div class="content pb-20">

                    <!-- Form with validation -->
                    <form method="post">
                        <div class="panel panel-body login-form">
                            <div class="text-center">
                                <p><img src="~/images/logo-one.png" alt="VALSoft" width="250" /></p>

                                <div class="icon-object border-slate-300 text-slate-300"><i class="icon-reading"></i></div>
                                <h5 class="content-group">Iniciar sesión @*<small class="display-block">Your credentials</small>*@</h5>
                            </div>

                            <div asp-validation-summary="All" class="text-danger"></div>

                            <div class="form-group has-feedback has-feedback-left">
                                <input asp-for="Username" type="text" class="form-control" placeholder="Username">
                                <div class="form-control-feedback">
                                    <i class="icon-user text-muted"></i>
                                </div>
                                <span asp-validation-for="Username" class="text-danger"></span>
                            </div>

                            <div class="form-group has-feedback has-feedback-left">
                                <input asp-for="Password" type="password" class="form-control" placeholder="Password">
                                <div class="form-control-feedback">
                                    <i class="icon-lock2 text-muted"></i>
                                </div>
                                <span asp-validation-for="Password" class="text-danger"></span>
                            </div>


                            <div class="form-group login-options">
                                <div class="row">
                                    <div class="col-sm-6">
                                        <label class="checkbox-inline" asp-for="RememberMe">
                                            <input type="checkbox" class="styled" asp-for="RememberMe" />
                                            @Html.DisplayNameFor(m => m.RememberMe)
                                        </label>
                                    </div>

                                    @*<div class="col-sm-6 text-right">
                                            <a href="login_password_recover.html">Forgot password?</a>
                                        </div>*@
                                </div>
                            </div>

                            <div class="form-group">
                                <button type="submit" class="btn bg-green-700 btn-block">Iniciar <i class="icon-arrow-right14 position-right"></i></button>
                            </div>

                            @*<div class="content-divider text-muted form-group"><span>or sign in with</span></div>
                                <ul class="list-inline form-group list-inline-condensed text-center">
                                    <li><a href="#" class="btn border-indigo text-indigo btn-flat btn-icon btn-rounded"><i class="icon-facebook"></i></a></li>
                                    <li><a href="#" class="btn border-pink-300 text-pink-300 btn-flat btn-icon btn-rounded"><i class="icon-dribbble3"></i></a></li>
                                    <li><a href="#" class="btn border-slate-600 text-slate-600 btn-flat btn-icon btn-rounded"><i class="icon-github"></i></a></li>
                                    <li><a href="#" class="btn border-info text-info btn-flat btn-icon btn-rounded"><i class="icon-twitter"></i></a></li>
                                </ul>

                                <div class="content-divider text-muted form-group"><span>Don't have an account?</span></div>
                                <a href="login_registration.html" class="btn btn-default btn-block content-group">Sign up</a>*@
                            
                        </div>
                    </form>
                    <!-- /form with validation -->

                </div>
                <!-- /content area -->

            </div>
            <!-- /main content -->

        </div>
        <!-- /page content -->

    </div>
    <!-- /page container -->

</body>
</html>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
