@model Pladeco.Web.Models.ProjectViewModel
@using Pladeco.Domain.Enum

@{
    ViewData["Title"] = "Details";
}

<div class="page-header">

    <br />
    <div class="breadcrumb-line breadcrumb-line-component">
        <ul class="breadcrumb">
            <li><a asp-action="Index"><i class="icon-folder"></i>Proyectos</a></li>
            <li class="active">@Model.Name</li>
        </ul>

        <ul class="breadcrumb-elements">
            <li class="dropdown">
                <a href="#" class="dropdown-toggle" data-toggle="dropdown">
                    <i class="icon-gear position-left"></i>
                    Acciones
                    <span class="caret"></span>
                </a>

                <ul class="dropdown-menu dropdown-menu-right">
                    <li><a href="#" data-toggle="modal" data-target="#modal_theme_danger"><i class="icon-database-remove"></i> Eliminar</a></li>
                </ul>
            </li>
        </ul>
    </div>

    <br />
    <div class="page-header-content">
        <div class="text-left">
            <a asp-action="Edit" asp-route-id="@Model.ID" class="btn bg-green-700" role="button">Editar</a>
            @*<a asp-action="Create" class="btn btn-default" role="button">Crear</a>*@
            <a asp-action="Create" asp-controller="Plans" asp-route-id="@Model.ID" class="btn btn-default" role="button">Agregar plan</a>
            <a asp-action="PaymentPlan" asp-route-id="@Model.ID" class="btn btn-default" role="button">Plan de gasto</a>
        </div>

        <div class="heading-elements">

        </div>
    </div>
</div>

<!-- /page header -->
<!-- Content area -->
<div class="content">

    <!-- Vertical form options -->
    <div class="row">

        <div class="col-md-12">
            <!-- Basic layout-->
            <p>
                <div class="text-left">
                </div>
            </p>
            <div class="panel panel-flat">
                <div class="panel panel-flat">
                    <div class="panel-heading">
                        <div class="progress">
                            <div class="progress-bar bg-green-700" style="width: @Model.Porc%">
                                <span>@Model.Porc% Complete</span>
                            </div>
                        </div>
                    </div>

                    <div class="panel-body">
                        <div class="row">
                            <div class="col-md-6">
                                <fieldset>
                                    <legend class="text-semibold"><i class="icon-folder position-left"></i>General </legend>

                                    <div class="form-group">
                                        <label asp-for="Name" class="text-semibold"></label>
                                        <input asp-for="Name" class="form-control" disabled />
                                        <span asp-validation-for="Name" class="text-danger"></span>
                                    </div>
                                    <div class="form-group">
                                        <label asp-for="Description" class="text-semibold"></label>
                                        <textarea asp-for="Description" rows="4" cols="5" class="form-control" disabled></textarea>
                                        <span asp-validation-for="Description" class="text-danger"></span>
                                    </div>

                                    <div class="form-group">
                                        <label asp-for="SolicitanteID" class="text-semibold"></label>
                                        <select asp-for="SolicitanteID" class="select" asp-items="Model.Users" disabled></select>
                                        <span asp-validation-for="SolicitanteID" class="text-danger"></span>
                                    </div>

                                    <div class="form-group">
                                        <label asp-for="ResponsableID" class="text-semibold"></label>
                                        <select asp-for="ResponsableID" class="select" asp-items="Model.Users" disabled></select>
                                        <span asp-validation-for="ResponsableID" class="text-danger"></span>
                                    </div>
                                    <div class="form-group">
                                        <label asp-for="SelectedUsers" class="text-semibold"></label>
                                        <select asp-for="SelectedUsers" class="select-border-color border-warning" asp-items="Model.ColaboratorsList" disabled></select>
                                        <span asp-validation-for="SelectedUsers" class="text-danger"></span>
                                    </div>

                                </fieldset>
                            </div>

                            <div class="col-md-3">
                                <fieldset>
                                    <legend class="text-semibold"><i class="icon-newspaper"></i> Datos</legend>

                                    <div class="form-group">
                                        <label asp-for="Priority"></label>
                                        <select asp-for="Priority" class="select" asp-items="Html.GetEnumSelectList<ePriority>()" disabled> </select>
                                        <span asp-validation-for="Priority" class="text-danger"></span>
                                    </div>

                                    <div class="form-group">
                                        <label asp-for="AreaID" class="text-semibold"></label>
                                        <select asp-for="AreaID" class="select" asp-items="Model.Areas" disabled></select>
                                        <span asp-validation-for="AreaID" class="text-danger"></span>
                                    </div>

                                    <div class="form-group">
                                        <label asp-for="SectorID" class="text-semibold"></label>
                                        <select asp-for="SectorID" class="select" asp-items="Model.Sectors" disabled></select>
                                        <span asp-validation-for="SectorID" class="text-danger"></span>
                                    </div>

                                    <div class="form-group">
                                        <label asp-for="ResponsableUnitID" class="text-semibold"></label>
                                        <select asp-for="ResponsableUnitID" class="select" asp-items="Model.ResponsableUnits" disabled></select>
                                        <span asp-validation-for="ResponsableUnitID" class="text-danger"></span>
                                    </div>

                                    <div class="form-group">
                                        <label asp-for="DevAxisID" class="text-semibold"></label>
                                        <select asp-for="DevAxisID" class="select" asp-items="Model.DevAxes" disabled></select>
                                        <span asp-validation-for="DevAxisID" class="text-danger"></span>
                                    </div>

                                    <div class="form-group">
                                        <label asp-for="TypologyID" class="text-semibold"></label>
                                        <select asp-for="TypologyID" class="select" asp-items="Model.Typologies" disabled></select>
                                        <span asp-validation-for="TypologyID" class="text-danger"></span>
                                    </div>

                                    <div class="form-group">
                                        <label asp-for="StageID" class="text-semibold"></label>
                                        <select asp-for="StageID" class="select" asp-items="Model.Stages" disabled></select>
                                        <span asp-validation-for="StageID" class="text-danger"></span>
                                    </div>

                                </fieldset>
                            </div>

                            <div class="col-md-3">
                                <fieldset>
                                    <legend class="text-semibold"><i class="icon-database-time2"></i> Duración</legend>

                                    <div class="form-group">
                                        <label class="text-semibold">@Html.DisplayNameFor(model => model.StartDate)</label>
                                        <input value="@Html.DisplayFor(model => model.StartDate)" class="form-control" disabled />
                                    </div>
                                    <div class="form-group">
                                        <label class="text-semibold">@Html.DisplayNameFor(model => model.EndDate)</label>
                                        <input value="@Html.DisplayFor(model => model.EndDate)" class="form-control" disabled />
                                    </div>
                                    <div class="form-group">
                                        <label class="text-semibold">@Html.DisplayNameFor(model => model.RealStartDate)</label>
                                        <input value="@Html.DisplayFor(model => model.RealStartDate)" class="form-control" disabled />
                                    </div>
                                    <div class="form-group">
                                        <label class="text-semibold">@Html.DisplayNameFor(model => model.RealEndDate)</label>
                                        <input value="@Html.DisplayFor(model => model.RealEndDate)" class="form-control" disabled />
                                    </div>
                                </fieldset>
                            </div>

                            <div class="col-md-12">
                                <fieldset>
                                    <legend class="text-semibold"><i class="icon-task"></i> Plan de ejecución</legend>
                                    <div class="table-responsive">
                                        <table class="table">
                                            <thead>
                                                <tr>
                                                    <th>#</th>
                                                    <th>Plan</th>
                                                    <th>Fecha inicio</th>
                                                    <th>Fecha fin</th>
                                                    <th>Progreso</th>
                                                    <th>Status</th>
                                                </tr>
                                            </thead>
                                            <tbody>
                                                @foreach (var item in Model.Plans)
                                                {
                                                    <tr>
                                                        <td>@item.ID</td>
                                                        <td>
                                                            <a asp-action="Details" asp-controller="Plans" asp-route-id="@item.ID">@Html.DisplayFor(modelItem => item.Name)</a>
                                                        </td>
                                                        <td>
                                                            @Html.DisplayFor(modelItem => item.StartDate)
                                                        </td>
                                                        <td>
                                                            @Html.DisplayFor(modelItem => item.EndDate)
                                                        </td>
                                                        <td>
                                                            <div class="progress">
                                                                <div class="progress-bar progress-bar-info" style="width: @item.Porc%;">
                                                                    <span class="sr-only">@item.Porc% Complete</span>
                                                                </div>
                                                            </div>
                                                        </td>
                                                        <td>@Html.DisplayFor(modelItem => item.Status)</td>
                                                    </tr>
                                                }
                                            </tbody>
                                        </table>
                                    </div>
                                </fieldset>
                            </div>
                        </div>
                    </div>

                </div>
            </div>
        </div>
        <!-- /basic layout -->
    </div>

</div>

<!-- Danger modal -->
<div id="modal_theme_danger" class="modal fade" tabindex="-1">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header bg-danger">
                <button type="button" class="close" data-dismiss="modal">&times;</button>
                <h6 class="modal-title">¡Atención!</h6>
            </div>

            <div class="modal-body">
                <h6 class="text-semibold">¿Está seguro que desea eliminar este elemento?</h6>
                <p>Esta acción es irreversible</p>

            </div>

            <div class="modal-footer">
                <form asp-action="Delete">
                    <button type="button" class="btn btn-link" data-dismiss="modal">Cancelar</button>
                    <input type="hidden" asp-for="ID" />
                    <input type="submit" value="Eliminar" class="btn btn-danger" />
                </form>
            </div>
        </div>
    </div>
</div>
<!-- /default modal -->
<!-- /content area -->
<!-- /vertical form options -->
<!-- Theme JS files -->
<script src="~/js/plugins/forms/selects/select2.min.js"></script>
<script src="~/js/plugins/forms/styling/uniform.min.js"></script>
<script src="~/js/custom/custom_select2.js"></script>
<script src="~/js/custom/custom_select2_project.js"></script>
<script src="~/js/custom/custom_checkradio.js"></script>

