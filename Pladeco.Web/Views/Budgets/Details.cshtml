@model Pladeco.Web.Models.BudgetViewModel

@{
    ViewData["Title"] = "Details";
}




<div class="page-header">

    <br />
    <div class="breadcrumb-line breadcrumb-line-component">
        <ul class="breadcrumb">
            <li><a asp-action="Index"><i class="icon-wallet"></i>Presupuesto</a></li>
            <li class="active">@Model.AreaName</li>
        </ul>

        <ul class="breadcrumb-elements">
            <li class="dropdown">
                <a href="#" class="dropdown-toggle" data-toggle="dropdown">
                    <i class="icon-gear position-left"></i>
                    Acciones
                    <span class="caret"></span>
                </a>

                <ul class="dropdown-menu dropdown-menu-right">
                    <li><a href="#" data-toggle="modal" data-target="#modal_theme_danger"><i class="icon-database-remove"></i> Eliminar</a></li>
                </ul>
            </li>
        </ul>
    </div>

    <br />
    <div class="page-header-content">
        <div class="text-left">
            <a asp-action="Edit" asp-route-id="@Model.AreaID" class="btn bg-green-700" role="button">Editar</a>
        </div>

        <div class="heading-elements">

        </div>
    </div>
</div>

<!-- /page header -->
<!-- Content area -->
<div class="content">

    <!-- Vertical form options -->
    <div class="row">
        <div class="col-md-12">

            <!-- Basic layout-->
            <p>
                <div class="text-left">
                </div>
            </p>


            <div class="panel panel-flat">

                <div class="panel-heading">

                </div>

                <div class="panel-body">


                    <div class="form-group">
                        <label class="control-label">@Html.DisplayNameFor(model => model.AreaName)</label>
                        <input value="@Html.DisplayFor(model => model.AreaName)" class="form-control" disabled />
                    </div>
                    <div class="form-group">
                        <label class="control-label">@Html.DisplayNameFor(model => model.Amount)</label>
                        <input value="@Html.DisplayFor(model => model.Amount)" class="form-control" disabled />
                    </div>


                </div>
            </div>
            <!-- /basic layout -->

        </div>

    </div>



</div>
<!-- /content area -->
<!-- /vertical form options -->
<!-- Theme JS files -->
<script src="~/js/plugins/forms/selects/select2.min.js"></script>
<script src="~/js/plugins/forms/styling/uniform.min.js"></script>
<script>
    $('.select').select2({
        placeholder: 'Select an option',
        allowClear: true
    });
</script>
<script src="~/js/demo_pages/form_layouts.js"></script>

